<div class="row">
	<div class="col-md-10 offset-md-1 col-12">
		<h1>Work In Progress</h1>
	</div>
	<div class="col-md-10 offset-md-1 col-12">	
	<%= simple_form_for @progress, html: { multipart: true } do |f| %>
		<%= f.input :title, label: false, placeholder: "Title", autofocus: true %>
		<%= f.input :description, as: :text, input_html: {rows: "10"}, label: false, placeholder: "Description"%>
			<br><br>
				<label class="btn btn-primary" id="prog_label_uploader"> 
					Add Files
					<span id="prog_span_uploader" > 
						<%= f.file_field :pictures, multiple: true, class: 'input_file' %>
					</span>
				</label>
			<br><br>
		<%= f.button :submit, class: "btn btn-primary" %>
	<% end %>
	</div>
</div>