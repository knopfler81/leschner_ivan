<div class="modal fade bd-example-modal-lg" id="addpicmodal_2" tabindex="-1" role="dialog" aria-labelledby="addpicmodal_2" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Add pictures</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal_text">
        <div class="container">
          <%= simple_form_for @progress, url: progress_pictures_path(@progress), method: :post do |f| %>
            <div class="row">
              <div class="col-12">
                <div class="image-upload-wrap">
                  <%= f.file_field :pictures, multiple: true, class: "file-upload-input", id: "files" %>
                  <h3>Drag and drop your pictures</h3>
                  <div id="result"></div> 
                </div>   
              <hr>
              <em>*Did you think to resize your images? Do it<a href="https://tinyjpg.com/"> <strong>here!</strong></a></em>
              </div>
              <div class="col-3 offset-9">
                <br>
                <%= f.button :submit, "Update", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>    
        </div>
      </div>     
    </div>
  </div>
</div>

