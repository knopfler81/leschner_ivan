<div class="container">
	<div class="row">
		<div class="col-1">
			<%= link_to 'Back', messages_path %>
		</div>
		<div class="col-10">
			<div id="comments">
				<div class="<%= (@message.user_id  == current_user.id) ? 'user_comments' : 'admin_comments' %>">	
					<h3><%= @message.subject %></h3>
					<p>Message from <%= @message.user.email %>, sent <%= time_ago_in_words(@message.created_at) %></p>
					<p><%= simple_format(@message.content) %></p>
				</div>
				<% @message.comments.each do |comment| %>
					 <div class="<%= (comment.user_id  == current_user.id) ? 'user_comments' : 'admin_comments' %>" >	
							<small><%= time_ago_in_words(comment.created_at) %></small> <br><br>
							<p><%= simple_format(comment.content) %></p>	
						</div>
				<% end %>			
			</div>
		</div>
	</div>
	<div class="row">
		<%= render "comments/form" %>
	</div>
</div>
