<div class="row">
	<div class="col-md-10 offset-md-1 col-12">
		<h1 class="big_title">Finished Guitar</h1>
	</div>

	<% if @finished_guitar.errors.any? %>
		<div class="col-md-10 offset-md-1 col-12">
			<div class="errors_explanation">
				<h2><%= pluralize(@finished_guitar.errors.count, "error") %> prohibited this Finished Guitar from being saved:</h2>
				<ul>
					<% @finished_guitar.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		</div>
	<% end %>
	<div class="col-md-10 offset-md-1 col-12">	
	<%= simple_form_for @finished_guitar, html: { multipart: true } do |f| %>
		<%= f.input :title, label: false, placeholder: "Title", autofocus: true %>
		<%= f.input :description, as: :text, input_html: {rows: "10"}, label: false, placeholder: "Enter a description"%>
	</div>

	<div class="col-md-10 offset-md-1 col-12">
		<div class="image-upload-wrap">
			<%= f.file_field :attachments, multiple: true, class: "file-upload-input", id: "files" %>
			<h3>Drag and drop your pictures*</h3>
			<div id="result"></div>	
		</div>
		<hr>
		<em>*Did you think to resize your images? Do it<a href="https://tinyjpg.com/"> <strong>here!</strong></a></em>
	
	</div>
	
	<div class="col-md-10 offset-md-1 col-12">
		<br><br>
		<%= f.button :submit, class: "btn btn-primary" %>	
	</div>
<% end %>

</div>
