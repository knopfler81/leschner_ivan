<div class="container">
	<div class="row">
		<div class="col-md-5 col-xs-12">	
			<h2>Edit text</h2>
			<hr>
			<%= simple_form_for @finished_guitar, html: { multipart: true } do |f| %>
				<%= f.input :title %>
				<%= f.input :description, input_html: {rows: "10"} %>
				<!-- la fermeture de la boucle est Ã  la fin du container -->
		</div>
		<div class="col-md-5 col-md-offset-1 col-xs-12">
			<div class="row">
				<h2>Manage your pictures</h2>
					<hr>
				<div class="col-xs-12">
					<% @finished_guitar.attachments.each_with_index do | guitar, index| %>
							<%= image_tag guitar.url, class: "tiny_image" %>
						<% if current_user %>
							<%= link_to finished_guitar_attachment_path(@finished_guitar, index), :method => :delete, data: { confirm: "Are you sure you want to delete this image?" }, class: "remove_link"  do %>
								<i class="fas fa-trash-alt trash"></i>
							<% end %>
						<% end %>
					<% end %>
				</div>
				<div class="col-xs-12">
					<hr>
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addpicmodal">
					  Add pictures
					</button>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<br>
			<hr>
		</div>
		<div class="col-md-10 col-md-offset-9">
				<%= f.button :submit, "Update Me", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
<%= render "modal_add_pic" %>
